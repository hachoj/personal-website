---
import { SOCIALS } from "@/constants";
import LinkButton from "./LinkButton.astro";
---

<div class="flex flex-wrap items-center gap-1.5">
  {
    SOCIALS.map(social => (
      <LinkButton
        href={social.href}
        class="p-1.5 opacity-80 transition-opacity hover:opacity-100"
        title={social.linkTitle}
      >
        <social.icon class="inline-block size-[1.35rem] fill-transparent stroke-current stroke-2 group-hover:fill-transparent" />
        <span class="sr-only">{social.linkTitle}</span>
      </LinkButton>
    ))
  }
</div>
