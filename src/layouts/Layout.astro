---
import '../styles/global.css';
import { getLastUpdated } from '../lastUpdated';
import { profile } from '../data';

interface Props {
  title?: string;
}

const { title = 'Personal Website' } = Astro.props;
const pathname = Astro.url.pathname;
const lastUpdated = getLastUpdated();

function isActive(href: string) {
  if (href === '/' && pathname === '/') return true;
  return href !== '/' && pathname.startsWith(href);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="site">
      <header class="site-header">
        <a class="brand" href="/">{profile.name}</a>
        <nav class="topnav" aria-label="Primary">
          <a class={isActive('/') ? 'active' : ''} href="/">Home</a>
          <a class={isActive('/about') ? 'active' : ''} href="/about">About</a>
          <a class={isActive('/projects') ? 'active' : ''} href="/projects">Projects</a>
          <a class={isActive('/papers') ? 'active' : ''} href="/papers">Papers</a>
          <a class={isActive('/timeline') ? 'active' : ''} href="/timeline">Timeline</a>
          <a class={isActive('/contact') ? 'active' : ''} href="/contact">Contact</a>
          <span class="nav-todo">Resume (TODO)</span>
        </nav>
      </header>

      <slot />

      <footer class="site-footer">
        <p class="footer-line">
          <span>Last updated: {lastUpdated}</span>
          <span aria-hidden="true">·</span>
          <a href="/projects">Projects</a>
          <span aria-hidden="true">·</span>
          <a href="/contact">Contact</a>
        </p>
      </footer>
    </div>
  </body>
</html>
