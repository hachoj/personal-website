---
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../layouts/SectionTitle.astro';
import { profile, publications } from '../data';
import { getLastUpdated } from '../lastUpdated';

const lastUpdated = getLastUpdated();
---

<Layout title={`${profile.name} | Papers`}>
  <main class="page">
    <header class="page-hero">
      <h1>Papers</h1>
      <p class="note">Last updated: {lastUpdated}</p>
    </header>

    <section class="section section-publications">
      <SectionTitle title="Publications" icon="papers" />
      <div class="list">
        {publications.map((paper) => (
          <article class="row">
            <div class="entry-head">
              <h3>{paper.title}</h3>
              <p>{paper.year}</p>
            </div>
            <p class="entry-meta">{paper.venue}</p>
            <p class="note">
              PDF: {paper.links.pdf ?? 'TODO'} Â· Code: {paper.links.code ?? 'TODO'}
            </p>
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>

