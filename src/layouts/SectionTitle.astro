---
interface Props {
  title: string;
  icon: 'about' | 'work' | 'edu' | 'projects' | 'papers' | 'skills' | 'contact';
}

const { title, icon } = Astro.props;
---

<h2 class="section-title">
  <span class="section-icon" aria-hidden="true">
    <svg
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1.7"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      {icon === 'about' && (
        <>
          <path d="M12 14c2.5 0 4.5 1.6 4.5 3.6V19H3.5v-1.4C3.5 15.6 5.5 14 8 14h4Z" />
          <path d="M10 12a4 4 0 1 0-4-4 4 4 0 0 0 4 4Z" />
        </>
      )}
      {icon === 'work' && (
        <>
          <path d="M7 6V5c0-1.1.9-2 2-2h2c1.1 0 2 .9 2 2v1" />
          <path d="M4 6h16a2 2 0 0 1 2 2v3H2V8a2 2 0 0 1 2-2Z" />
          <path d="M2 11h20v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v-6Z" />
        </>
      )}
      {icon === 'edu' && (
        <>
          <path d="M2 7l10-4 10 4-10 4L2 7Z" />
          <path d="M6 10v6c0 .6 2.7 2 6 2s6-1.4 6-2v-6" />
          <path d="M22 7v7" />
        </>
      )}
      {icon === 'projects' && (
        <>
          <path d="M4 6h16v12H4V6Z" />
          <path d="M8 10h8" />
          <path d="M8 14h6" />
        </>
      )}
      {icon === 'papers' && (
        <>
          <path d="M6 2h9l3 3v17H6V2Z" />
          <path d="M15 2v4h4" />
          <path d="M8 10h8" />
          <path d="M8 14h8" />
          <path d="M8 18h6" />
        </>
      )}
      {icon === 'skills' && (
        <>
          <path d="M13 2l1 2.6 2.8.4-2 2 .5 2.8-2.5-1.3-2.5 1.3.5-2.8-2-2 2.8-.4L11 2" />
          <path d="M4 12h6v8H4v-8Z" />
          <path d="M14 12h6v8h-6v-8Z" />
        </>
      )}
      {icon === 'contact' && (
        <>
          <path d="M3 6h18v12H3V6Z" />
          <path d="M3 7l9 6 9-6" />
        </>
      )}
    </svg>
  </span>
  <span>{title}</span>
</h2>

